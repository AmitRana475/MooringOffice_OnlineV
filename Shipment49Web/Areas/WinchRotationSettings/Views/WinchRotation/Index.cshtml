                        </div>


                        <div class="text-center">
                          
                            <ul class="pagination">
                                @{
                                    int totalRecords = Convert.ToInt32(TempData.Peek("TotalRecords_Pending"));

                                    int tot_pages = totalRecords / Shipment49Web.Common.CommonMethods.PAGESIZE;
                                    int remainder = totalRecords % Shipment49Web.Common.CommonMethods.PAGESIZE;

                                    tot_pages = remainder > 0 ? (tot_pages + 1) : tot_pages;

                                    int currPage = Convert.ToInt32(TempData.Peek("CurrentPage_Pending"));

                                    if (totalRecords > 0)
                                    {
                                        if (currPage == 0)
                                        {
                                            currPage = 1;
                                        }

                                        if (currPage != 1)
                                        {
                                            <li>@Html.ActionLink("First", "Index", "WinchRotation", new { cp = 1 }, null)</li>
                                        }

                                        if (currPage != tot_pages)
                                        {
                                            for (int cnt = currPage; cnt < (currPage + 10); cnt++)
                                            {
                                                if (cnt == currPage)
                                                {
                                                    <li class="active"><a href="#">@cnt</a></li>
                                                }
                                                else
                                                {
                                                    <li>@Html.ActionLink(cnt.ToString(), "Index", "WinchRotation", new { cp = cnt }, null)</li>
                                                }

