@model List<Reports.View_AbrasionDetails>

@{
    ViewBag.Title = "Abrasion Details";
    Layout = "~/Views/Shared/_LeftSideBar.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Abrasion Details
        </h1>
    </section>

    <section class="content">
        <div class="box box-info">
            <div class="box-body">
                <div class="table-responsive table-striped">
                    <table class="table no-margin" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Vessel Name</th>
                                <th>Certificate Number</th>
                                <th>Rope Type</th>
                                <th>Inspect Date</th>
                                <th>Installed Date</th>
                                <th>Average Rating A</th>
                                <th>Average Rating B</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var record in Model)
                                {
                                    <tr>
                                        <td>@record.VesselName</td>
                                        <td>@record.CertificateNumber</td>
                                        <td>@record.RopeType</td>
                                        <td>
                                            @{
                                                DateTime? dt = record.InspectDate;
                                                if (dt != null)
                                                {
                                                    @Html.Raw(dt.Value.ToString("dd-MMM-yyyy"))
                                                }
                                            }
                                        </td>
                                        <td>
                                            @{
                                                DateTime? dt_1 = record.InstalledDate;
                                                if (dt_1 != null)
                                                {
                                                    @Html.Raw(dt_1.Value.ToString("dd-MMM-yyyy"))
                                                }
                                            }
                                        </td>
                                        <td>@record.AverageRating_A</td>
                                        <td>@record.AverageRating_B</td>
                                        <td>
                                            <a href="~/Data/Reports/RopeSummary?rope=@record.RopeId&tail=0&vessel=@record.VesselID" title="Rope Details" target="_blank">
                                                <i class="fa fa-list-ul"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>