@*@model List<Reports.View_SatisfactoryRopes_Details>*@
@model Shipment49Web.Common.RopeSummaryReport

@{
    ViewBag.Title = "Satisfactory Ropes";
    Layout = "~/Views/Shared/_LeftSideBar.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Ropes Satisfaction
        </h1>
    </section>

    <section class="content">
        <div class="box box-info">
            <div class="box-body">
                @{ int count = 0;}
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="active">
                            <a href="#unsatisfactory" class="tablinks" data-toggle="tab">Un-Satisfactory Ropes</a>
                        </li>
                        <li>
                            <a href="#satisfactory" class="tablinks" data-toggle="tab">Satisfactory Ropes</a>
                        </li>
                    </ul>
                    <div class="tab-content" style="min-height: 650px">
                        <div class="tab-pane active" id="unsatisfactory">
                            @{
                                count = Model.UnSatisfactoryRopesList.Count;
                                if (count == 0)
                                {
                                    <div class="panel-group">
                                        <div class="panel panel-info">
                                            <div class="panel-body">
                                                <p class="text-center">
                                                    No Records Found!
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="table-responsive">
                                        <table class="table no-margin table-striped" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Vessel Name</th>
                                                    <th>Certificate Number</th>
                                                    <th>Rope Type</th>
                                                    <th>Rating A</th>
                                                    <th>Rating B</th>
                                                    <th>Out of Service</th>
                                                    <th>Installed Date</th>
                                                    <th>Details</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    foreach (var record in Model.UnSatisfactoryRopesList)
                                                    {
                                                        <tr>
                                                            <td>@record.VesselName</td>
                                                            <td>@record.CertificateNumber</td>
                                                            <td>@record.RopeType</td>
                                                            <td>@record.AverageRating_A</td>
                                                            <td>@record.AverageRating_B</td>
                                                            <td>@record.OutofServiceDate</td>
                                                            <td>
                                                                @{
                                                                    DateTime? dt = record.InstalledDate;
                                                                    if (dt != null)
                                                                    {
                                                                        @Html.Raw(dt.Value.ToString("dd-MMM-yyyy"))
                                                                    }
                                                                }
                                                            </td>
                                                            <td>
                                                                <a href="~/Data/Reports/RopeSummary?rope=@record.RopeId&tail=@record.RopeTail&vessel=@record.VesselID" title="Rope Details" target="_blank">
                                                                    <i class="fa fa-list-ul"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            }
                        </div>
                        <div class="tab-pane" id="satisfactory">
                            @{
                                count = Model.SatisfactoryRopesList.Count;
                                if (count == 0)
                                {
                                    <div class="panel-group">
                                        <div class="panel panel-info">
                                            <div class="panel-body">
                                                <p class="text-center">
                                                    No Records Found!
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="table-responsive">
                                        <table class="table no-margin table-striped" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Vessel Name</th>
                                                    <th>Certificate Number</th>
                                                    <th>Rope Type</th>
                                                    <th>Rating A</th>
                                                    <th>Rating B</th>
                                                    <th>Out of Service</th>
                                                    <th>Installed Date</th>
                                                    <th>Details</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    foreach (var record in Model.SatisfactoryRopesList)
                                                    {
                                                        <tr>
                                                            <td>@record.VesselName</td>
                                                            <td>@record.CertificateNumber</td>
                                                            <td>@record.RopeType</td>
                                                            <td>@record.AverageRating_A</td>
                                                            <td>@record.AverageRating_B</td>
                                                            <td>@record.OutofServiceDate</td>
                                                            <td>
                                                                @{
                                                                    DateTime? dt = record.InstalledDate;
                                                                    if (dt != null)
                                                                    {
                                                                        @Html.Raw(dt.Value.ToString("dd-MMM-yyyy"))
                                                                    }
                                                                }
                                                            </td>
                                                            <td>
                                                                <a href="~/Data/Reports/RopeSummary?rope=@record.RopeId&tail=@record.RopeTail&vessel=@record.VesselID" title="Rope Details" target="_blank">
                                                                    <i class="fa fa-list-ul"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
