@model List<Reports.tblLooseEquipInspectionSetting>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeftSideBar.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Loose Equipments
        </h1>
        <p class="pull-right">
            @Html.ActionLink("Create New", "Create")
        </p>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-body">
                        <div class="table-responsive table-striped">
                            <table class="table no-margin" id="dataTable" width="100%" cellspacing="0">
                                <tr>
                                    <th>Equipment Type</th>
                                    <th>Inspection Frequency</th>
                                    <th>Max Running Hours</th>
                                    <th>Max Months Allowed</th>
                                    <th>Options</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EquipmentTypeName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InspectionFrequency)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaximumRunningHours)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MaximumMonthsAllowed)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
