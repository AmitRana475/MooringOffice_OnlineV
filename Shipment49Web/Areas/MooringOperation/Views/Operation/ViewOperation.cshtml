@model Reports.MOperationBirthDetail

@{
    ViewBag.Title = "ViewOperation";
    Layout = "~/Views/Shared/_LayoutVessel7.cshtml";
}

@*<script src="~/assetsV/select2/dist/js/select2.min.js" type='text/javascript'></script>
