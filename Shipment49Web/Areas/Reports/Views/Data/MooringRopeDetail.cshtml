@model Shipment49Web.Areas.CrewReport.Controllers.FilterModel

@{
    ViewBag.Title = "Mooring Rope Detail";
    Layout = "~/Views/Shared/_LeftSideBar.cshtml";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<script>
    $(function () {
        $('.dtpicker').datepicker({
            autoclose: true
        })
    });
</script>

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Mooring Rope Details
        </h1>
    </section>

    <section class="content">
        <div class="box box-info">
            <div class="box-body">
                <div class="row">
                    @using (Html.BeginForm("MooringRopeDetail", "data", FormMethod.Post, new { area = "Reports" }))
                    {
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.TextBox("DateFrom", "", new { @class = "form-control dtpicker", @placeholder = "Date From" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.TextBox("DateTo", "", new { @class = "form-control dtpicker", @placeholder = "Date To" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div style="float:right">
                                    <button type="submit" class="btn btn-danger">Search</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="box box-default">
                    <div class="box-body">
                        <div class="table-responsive table-striped">
                            <table class="table no-margin" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Certificate Number</th>
                                        <th>Assigned Winch</th>
                                        <th>Location</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var record in Model.ListMooringRopeDetails)
                                        {
                                            <tr>
                                                <td>@record.CertificateNumber</td>
                                                <td>@record.AssignedWinch</td>
                                                <td>@record.Location</td>
                                                <td>
                                                    <a href="~/Reports/Data/RopeSummary?rope=@record.RopeId&tail=@record.RopeTail&vessel=@record.VesselID" title="Rope Details" target="_blank">
                                                        <i class="fa fa-list-ul"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>