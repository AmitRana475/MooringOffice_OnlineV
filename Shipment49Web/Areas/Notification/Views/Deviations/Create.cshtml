@model NotificationLayer.CommentClass

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page_title margin-3-bot">
    <h2>Create</h2>
</div>
<div class="white-bg margin-3 fleet">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.Nid)
            @Html.HiddenFor(model => model.CommentBy)


            <div class="row">
                <div class="col-sm-6">
                    @Html.LabelFor(model => model.Comment, htmlAttributes: new { })
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <input type="submit" value="Save" class="btn peach-btn btn-block" />
                </div>
                <div class="col-sm-2 back_text margin-1-top">
                    <i class="fa fa-chevron-left"></i>&nbsp; @Ajax.ActionLink("Back to List", "Index", new { page = @ViewBag.page, fleettype = @ViewBag.fleettype, fleetname = @ViewBag.fleetname, search = @ViewBag.vname, datefrom = @ViewBag.datefrom, dateto = @ViewBag.dateto }, null)
                </div>
            </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
