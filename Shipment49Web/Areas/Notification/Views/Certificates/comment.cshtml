<div class="page_title margin-3-bot">
    <h2> Comment List</h2>
</div>
<div class="white-bg margin-3 fleet">
    <div class="row margin-4-bot">
        <div class="col-sm-2 col-xs-12">
            @Ajax.ActionLink("Comment New", "create", "certificates", new { area = "notification", id = ViewBag.Nid }, null, new { @class = "btn btn-success btn-block" })
        </div>
        <div class="col-sm-6 col-xs-12 pull-right">
            <div class="navbar-collapse">
                @using (Html.BeginForm("comment", "certificates", FormMethod.Get, new { area = "notification", @class = "navbar-form navbar-right" }))
