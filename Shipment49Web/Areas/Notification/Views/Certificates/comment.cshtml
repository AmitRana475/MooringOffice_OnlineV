                    <div class="form-group">
                        <input type="text" name="search" class="form-control" placeholder="Comment By" />
                    </div>
                    <button type="submit" value="search" class="btn peach-btn">Search</button>
                }
            </div>
        </div>
    </div>

    @Html.Partial("_certicomment")

    <div id="message-listbm">
        <font>@ViewBag.Messagegrid</font>
    </div>
    <div class="back_text margin-5-top">
        <i class="fa fa-chevron-left"></i>&nbsp; @Ajax.ActionLink("Back to List", "Index", new { page = @ViewBag.page, fleettype = @ViewBag.fleettype, fleetname = @ViewBag.fleetname, search = @ViewBag.vname, datefrom = @ViewBag.datefrom, dateto = @ViewBag.dateto }, null)
    </div>
</div>



