@model CertificationLayer.CommentCirtificate

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Nid)
        @Html.HiddenFor(model => model.CommentBy)


        <div class="form-group">
            @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Ajax.ActionLink("Back to List", "Index", new { page = @ViewBag.page, fleettype = @ViewBag.fleettype, fleetname = @ViewBag.fleetname, search = @ViewBag.vname, datefrom = @ViewBag.datefrom, dateto = @ViewBag.dateto }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
