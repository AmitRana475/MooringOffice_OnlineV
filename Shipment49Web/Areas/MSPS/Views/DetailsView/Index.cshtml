                        </div>
                        <div class="tab-pane" id="revisiondetails">
                            <div id="indextab2">
                                <div class="content">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card">
                                                    <div class="card-content user_listingtbl">
                                                        <div class="table-responsive" id="dvListing6">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
