    Layout = "~/Views/Shared/_LeftSideBar.cshtml";

}

<h2>Check Content</h2>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @*<div class="card">
                        <div class="card-content viewem_list">
                            <div class="row">
                                <div class="col-md-3">

                                    <div class="form-group">
