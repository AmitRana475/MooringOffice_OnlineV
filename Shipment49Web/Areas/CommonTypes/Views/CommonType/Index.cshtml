@model List<MenuLayer.MasterCommon>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LeftSideBar.cshtml";
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>
            @ViewBag.Type
        </h1>
        <p class="pull-right">
            @Html.ActionLink("Create New", "Create", new { type = (MenuLayer.CommonType)ViewBag.Type })
        </p>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-info">
                    <div class="box-body">
                        <div class="table-responsive table-striped">
                            <table class="table no-margin" id="dataTable" width="100%" cellspacing="0">
                                <tr>
                                    <th>Name</th>
                                    <th></th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>