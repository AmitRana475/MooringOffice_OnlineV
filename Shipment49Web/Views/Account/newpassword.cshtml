@model UserLayer.UserClass

@{
    Layout = "~/Views/Shared/_LayoutForgot.cshtml";
    ViewBag.Title = "Renew-Password";
}

<style>

    .editTable {
    background: #ffffff none repeat scroll 0 0;
    border: 7px solid #f8f8f8;
    border-radius: 2px;
    box-shadow: 0 0 3px rgba(0, 0, 0, 0.2);
    font-size: 13px;
    margin: 92px auto;
    width: 95%;
}
.editTable table td {
    color: #777777;
    font-size: 13px !important;
    padding: 2px 10px !important;
}
.editTable table td:first-child {
    width: 150px;
}
.editTable table td input[type="text"], .editTable table td textarea, .editTable table td input[type="password"] {
    border: 1px solid #dddddd;
    color: #777777;
    font-size: 13px;
    padding: 8px;
    width: 98% !important;
}
.editTable table td input[type="submit"] {
    background: #2dc3e8 none repeat scroll 0 0;
    border: medium none;
    border-radius: 2px;
    color: #ffffff;
    float: right;
    margin: 0 5px;
    padding: 7px;
}
.editTable table td a.back {
    background: #555555 none repeat scroll 0 0;
    border-radius: 2px;
    color: #ffffff;
    float: right;
    
    padding: 7px;
}


    .editTable.resetPass {
    width: 50%;
}
.editTable.resetPass table td input[type="text"], .editTable.resetPass table td textarea, .editTable.resetPass table td input[type="password"]
{
    width: 96% !important;
}



</style>



<script src="~/Scripts/jquery-1.7.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


<style>
    img.ship-logo {
        left: 0;
        margin: 0 auto;
        position: absolute;
        right: 30px;
        text-align: center;
        top: 10%;
    }
</style>

<h2>
    <img src="http://work-ship.com/wp-content/uploads/2016/05/logo.png" alt="Shipping work and rest hrs" class="ship-logo">
</h2>

@using (Html.BeginForm("newpassword", "Account", FormMethod.Post))
{
   
    @Html.AntiForgeryToken()

    @*@Html.ValidationSummary()*@

    @*@Html.ValidationSummary(true)
    @Html.AntiForgeryToken()*@
    @*<fieldset>
        <legend>New Password</legend>*@
        <div class="editTable resetPass">
            <table cellpadding="0" cellspacing="0" border="0" width="80%">
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.UserId)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.EmailId)
                    </td>
                </tr>
                <tr>
                    <td style="font-size: large">
                        Name
                    </td>
                    <td>
                        <div>
                            @Html.TextBoxFor(model => model.FullName, new { @readonly = "readonly" })
                          
                        </div>
                    </td>
                </tr>

                <tr>
                    <td style="font-size: large">
                        Email
                    </td>
                    <td>
                        <div>
                            @Html.TextBoxFor(model => model.EmailId, new { @readonly = "readonly" })
                           
                        </div>
                    </td>
                </tr>

                <tr>
                    <td style="font-size: large">
                        Password
                    </td>
                    <td>
                        <div>
                            @Html.PasswordFor(model => model.Password, new { placeholder = "e.g.123123" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td style="font-size: large">
                        Confirm Password
                    </td>
                    <td>
                        <div>
                            @Html.PasswordFor(model => model.ConfirmPassowrd, new { placeholder = "e.g.123123" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassowrd)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center">
                        <i class="fa fa-chevron-left"></i>&nbsp;  @Html.ActionLink("Back to Login", "login", "account", new { Style = "color:Blue" }, new { @class = "back" })
                        <input type="submit" value="Reset Password" onclick="return Show();" />

                    </td>
                </tr>
                <tr>
                    <td colspan="2" align="center"></td>
                </tr>
            </table>

            <div align="center" id="bmsname1">
                  <form>@ViewBag.passwordreset</form>
                </div>
        </div>
    @*</fieldset>*@

}
